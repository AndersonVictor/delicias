# Database Configuration
# For MySQL on Railway (use MySQL plugin variable):
DATABASE_URL="${{MySQL.DATABASE_URL}}"
# For local development:
# DATABASE_URL="mysql://user:password@localhost:3306/delicias_bakery"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application Configuration (Railway will auto-assign PORT)
PORT=5001
NODE_ENV="production"

# CORS Configuration
FRONTEND_URL="https://your-frontend-url.railway.app"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"
